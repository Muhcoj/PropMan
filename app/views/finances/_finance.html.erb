<tr>
	<td>
		<%= finance.year %>
	</td>
	<td>
		<%= finance.month %>
	</td>
	<td class='custom-link'>
		<%= link_to "€ #{finance.payment_due}", finance %>
	</td>
	<td>
		<%= status_label finance.status %></span>
	</td>
	<td>
		<%= link_to 'Edit', edit_finance_path(finance), id: "edit_#{finance.id}" %> 
	</td>
	<td>
		<%= link_to 'Löschen', finance_path(finance), method: :delete, id: "delete_post_#{finance.id}_from_index", data: { confirm: 'Bist Du sicher?' } %>
	</td>
</tr>