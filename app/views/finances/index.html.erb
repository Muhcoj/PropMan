<h1>Finance</h1>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				Year
			</th>
			<th>
				Month
			</th>
			<th>
				Open Payment
			</th>
			<th>
				Status
			</th>
		</tr>
	</thead>
	<tbody id="finances">
		<%= render @finances %>
	</tbody>

</table>

<div id="paginator">
	<%= paginate @finances, remote: true %>
</div>